{
  "name": "vuenime",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest --project unit",
    "test:nuxt": "vitest --project nuxt",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "format": "prettier --write .",
    "prepare": "husky",
    "prepush": "npm run lint && npm run typecheck && npm run build"
  },
  "dependencies": {
    "@nuxt/eslint": "1.12.1",
    "@nuxt/fonts": "0.12.1",
    "@nuxt/icon": "2.2.0",
    "@nuxt/test-utils": "^3.23.0",
    "@nuxt/ui": "^4.3.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@pinia-plugin-persistedstate/nuxt": "^1.2.1",
    "@pinia/nuxt": "^0.11.3",
    "eslint": "^9.0.0",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vue-view-transitions": "^1.2.1"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.2.3",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^3.2.0",
    "@vue/test-utils": "^2.4.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "playwright-core": "^1.57.0",
    "prettier": "^3.5.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.0",
    "vue-tsc": "^3.2.2"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
